<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<fx:root fx:id="mapsStackPane" alignment="CENTER" onMouseClicked="#mapsStackPaneOnMouseClicked" stylesheets="@../css/custom.css" type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stories.maps.MapsController">
    <children>
        <AnchorPane fx:id="mapsAnchorPane" minHeight="700.0">
            <children>
                <VBox fx:id="steamCustomVBox" alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                    <children>
                        <TabPane fx:id="mapsTabPane" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab fx:id="steamCustomMapsTab" text="Steam Custom Maps">
                                    <graphic>
                                        <HBox spacing="10.0">
                                            <children>
                                                <CheckBox fx:id="selectAllSteamCustomMapsCheckBox" onMouseClicked="#selectAllSteamCustomMapsOnMouseClicked"/>
                                                <StackPane>
                                                    <children>
                                                        <Circle fill="#57965c" radius="14" />
                                                        <Text fx:id="steamCustomMapsCounter" fill="#e8e8e8" text="3" textAlignment="CENTER" wrappingWidth="23.0" />
                                                    </children>
                                                </StackPane>
                                            </children>
                                        </HBox>

                                    </graphic>
                                    <content>
                                        <ScrollPane fx:id="steamCustomScrollPane" fitToHeight="true" fitToWidth="true" minHeight="100" vbarPolicy="AS_NEEDED">
                                            <content>
                                                <FlowPane fx:id="steamCustomMapsFlowPane" hgap="20.0" vgap="20.0">
                                                    <padding>
                                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                                    </padding>
                                                    <cursor>
                                                        <Cursor fx:constant="DEFAULT" />
                                                    </cursor>
                                                </FlowPane>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                                <Tab text="Steam Official Maps">
                                    <graphic>
                                        <StackPane>
                                            <children>
                                                <Circle fill="#c94f4f" radius="14" />
                                                <Text fx:id="steamOfficialMapsCounter" fill="#e8e8e8" text="3" textAlignment="CENTER" wrappingWidth="23.0" />
                                            </children>
                                        </StackPane>
                                    </graphic>
                                    <content>
                                        <ScrollPane fx:id="steamOfficialScrollPane" fitToHeight="true" fitToWidth="true" minHeight="100" vbarPolicy="AS_NEEDED">
                                            <content>
                                                <FlowPane fx:id="steamOfficialMapsFlowPane" hgap="20.0" vgap="20.0">
                                                    <padding>
                                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                                    </padding>
                                                    <cursor>
                                                        <Cursor fx:constant="DEFAULT" />
                                                    </cursor>
                                                </FlowPane>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                                <Tab text="Epic Custom Maps">
                                    <graphic>
                                        <HBox spacing="10.0">
                                            <children>
                                                <CheckBox fx:id="selectAllEpicCustomMapsCheckBox" onMouseClicked="#selectAllEpicCustomMapsOnMouseClicked" />
                                                <StackPane>
                                                    <children>
                                                        <Circle fill="#57965c" radius="14" />
                                                        <Text fx:id="epicCustomMapsCounter" fill="#e8e8e8" text="0" textAlignment="CENTER" wrappingWidth="23.0" />
                                                    </children>
                                                </StackPane>
                                            </children>
                                        </HBox>
                                    </graphic>
                                    <content>

                                    </content>
                                </Tab>
                                <Tab text="Epic Official Maps">
                                    <graphic>
                                        <StackPane>
                                            <children>
                                                <Circle fill="#c94f4f" radius="14" />
                                                <Text fx:id="epicOfficialMapsCounter" fill="#e8e8e8" text="0" textAlignment="CENTER" wrappingWidth="23.0" />
                                            </children>
                                        </StackPane>
                                    </graphic>
                                    <content>

                                    </content>
                                </Tab>
                            </tabs>
                            <cursor>
                                <Cursor fx:constant="DEFAULT" />
                            </cursor>
                        </TabPane>

                        <HBox fx:id="menuHbox" alignment="CENTER" maxWidth="740" spacing="30.0">
                            <children>
                                <MenuBar maxHeight="45.0" maxWidth="215.0" nodeOrientation="LEFT_TO_RIGHT">
                                    <menus>
                                        <Menu fx:id="mapsAddMenu" mnemonicParsing="false">
                                            <graphic>
                                                <ImageView fitHeight="48.0" layoutX="405.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/add.png" />
                                                    </image>
                                                    <cursor>
                                                        <Cursor fx:constant="HAND" />
                                                    </cursor>
                                                    <viewport>
                                                        <Rectangle2D />
                                                    </viewport>
                                                </ImageView>
                                            </graphic>
                                            <items>
                                                <MenuItem fx:id="mapsIdUrl" mnemonicParsing="false" text="By ID/URL" />
                                                <MenuItem fx:id="mapsWorkshop" mnemonicParsing="false" text="By Steam's Workshop" />
                                            </items>
                                        </Menu>
                                        <Menu fx:id="mapsEditMenu" mnemonicParsing="false">
                                            <graphic>
                                                <ImageView fitHeight="48.0" layoutX="405.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/edit.png" />
                                                    </image>
                                                    <cursor>
                                                        <Cursor fx:constant="HAND" />
                                                    </cursor>
                                                    <viewport>
                                                        <Rectangle2D />
                                                    </viewport>
                                                </ImageView>
                                            </graphic>
                                        </Menu>
                                        <Menu fx:id="mapsDeleteMenu" mnemonicParsing="false">
                                            <graphic>
                                                <ImageView fitHeight="48.0" layoutX="405.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/delete.png" />
                                                    </image>
                                                    <cursor>
                                                        <Cursor fx:constant="HAND" />
                                                    </cursor>
                                                    <viewport>
                                                        <Rectangle2D />
                                                    </viewport>
                                                </ImageView>
                                            </graphic>
                                        </Menu>
                                        <Menu fx:id="mapsImportMenu" mnemonicParsing="false">
                                            <graphic>
                                                <ImageView fitHeight="48.0" layoutX="405.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/import.png" />
                                                    </image>
                                                    <cursor>
                                                        <Cursor fx:constant="HAND" />
                                                    </cursor>
                                                </ImageView>
                                            </graphic>
                                        </Menu>
                                        <Menu fx:id="mapsOrderMenu" mnemonicParsing="false">
                                            <graphic>
                                                <ImageView fitHeight="48.0" layoutX="405.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/order.png" />
                                                    </image>
                                                    <cursor>
                                                        <Cursor fx:constant="HAND" />
                                                    </cursor>
                                                </ImageView>
                                            </graphic>
                                            <items>
                                                <MenuItem fx:id="orderMapsByAlias" mnemonicParsing="false" text="Order maps by alias" />
                                                <MenuItem fx:id="orderMapsByName" mnemonicParsing="false" text="Order maps by name" />
                                                <MenuItem fx:id="orderMapsByReleaseDate" mnemonicParsing="false" text="Order maps by release date" />
                                                <MenuItem fx:id="orderMapsByImportedDate" mnemonicParsing="false" text="Order maps by imported date" />
                                                <MenuItem fx:id="orderMapsByDownload" mnemonicParsing="false" text="Order maps by download" />
                                            </items>
                                        </Menu>
                                    </menus>
                                    <VBox.margin>
                                        <Insets left="20.0" top="20.0" />
                                    </VBox.margin>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </MenuBar>

                                <HBox alignment="CENTER">
                                    <children>
                                        <TextField fx:id="searchMapsTextField" onKeyReleased="#searchMapsOnKeyReleased">
                                            <VBox.margin>
                                                <Insets top="5.0" />
                                            </VBox.margin>
                                        </TextField>
                                        <ImageView fitHeight="26.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/search.png" />
                                            </image>
                                            <HBox.margin>
                                                <Insets left="5.0" />
                                            </HBox.margin>
                                        </ImageView>
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </HBox>

                                <Slider fx:id="columnSlider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" min="2.0" minorTickCount="0" onMouseClicked="#columnSliderOnMouseClicked" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="6.0">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                    <padding>
                                        <Insets right="10.0" top="18.0" />
                                    </padding>
                                </Slider>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
       <cursor>
          <Cursor fx:constant="CROSSHAIR" />
       </cursor>
        </AnchorPane>
        <ProgressIndicator fx:id="progressIndicator" maxHeight="150.0" maxWidth="150.0" />
    </children>
</fx:root>
